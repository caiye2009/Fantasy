# ä½¿ç”¨ Alpine ç‰ˆ Node é•œåƒ
FROM node:22-alpine AS builder

# è®¾ç½®ç¯å¢ƒå˜é‡
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV NODE_OPTIONS=--max-old-space-size=8192
ENV TZ=Asia/Shanghai
ENV CI=true

# å®‰è£… corepack å’Œå…¶ä»–ä¾èµ–
RUN npm i -g corepack

# å®‰è£…è§£å‹å·¥å…·ï¼ˆAlpine ä½¿ç”¨ apk å®‰è£…ï¼‰
RUN apk add --no-cache unzip

WORKDIR /app

# å¤åˆ¶é¡¹ç›®æ–‡ä»¶
COPY . /app

# å®‰è£…ä¾èµ–
RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install --frozen-lockfile

# build web-ele
RUN pnpm --filter=apps/web-ele run build

# è§£å‹ dist.zip
RUN unzip -o apps/web-ele/dist.zip -d apps/web-ele/dist

RUN echo "Builder Success ğŸ‰"

# ä½¿ç”¨ Alpine ç‰ˆçš„ nginx é•œåƒä½œä¸ºç”Ÿäº§ç¯å¢ƒé•œåƒ
FROM nginx:stable-alpine AS production

# é…ç½® nginx
RUN echo "types { application/javascript js mjs; }" > /etc/nginx/conf.d/mjs.conf \
    && rm -rf /etc/nginx/conf.d/default.conf

# å¤åˆ¶æ„å»ºäº§ç‰©
COPY --from=builder /app/apps/web-ele/dist /usr/share/nginx/html

# å¤åˆ¶ nginx é…ç½®
COPY --from=builder /app/scripts/deploy/nginx.conf /etc/nginx/nginx.conf

EXPOSE 8080

# å¯åŠ¨ nginx
CMD ["nginx", "-g", "daemon off;"]
